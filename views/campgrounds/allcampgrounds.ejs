<% layout('layouts/boilerplates') %>
    <h1>CAMPGROUNDS</h1>
    <!--<a href="/campgrounds/new">Add a campground?</a>-->
    <% for (let camp of campgrounds) { %>
        <div class="card mt-3">
            <div class="row">
                <div class="col-md-4">
                        <img class="img-fluid" src="<%= camp.image[0].url %>" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= camp.title%></h5>
                        <p class="card-text">
                            <%= camp.location %> 
                        </p>
                        <a href="/campgrounds/<%= camp.id%>" class="btn btn-primary">View Camp</a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>